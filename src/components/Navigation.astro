---
const pages = [
    {
        path: "/",
        name: "Home",
    },
    {
        path: "/research",
        name: "Research",
    },
    {
        path: "/publications",
        name: "Publications",
    },
    {
        path: "/about",
        name: "About",
    },
];
---

<nav class="w-full basis-3/4 pt-5">
    <ul class="flex flex-col">
        {
            pages.map((page) => (
                <li class="flex my-1 rounded bg-slate-200">
                    <a class="flex grow p-2 text-xl font-bold" href={page.path}>
                        {page.name}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>
