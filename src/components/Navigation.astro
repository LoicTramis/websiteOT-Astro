---
const { pageTitle, colorTheme } = Astro.props;
const pages = [
    {
        path: "/",
        name: "Home",
    },
    {
        path: "/research",
        name: "Research",
        routes: [
            {
                path: "/health",
                name: "Health",
            },
            {
                path: "/environment",
                name: "Environment",
            },
            {
                path: "/adhesion",
                name: "Adhesion",
            },
        ],
    },
    {
        path: "/publications",
        name: "Publications",
    },
    {
        path: "/about",
        name: "About",
    },
];
const currentPageBgColor = "text-zinc-200 bg-zinc-600 rounded";
const currentPageColor = "";
const hover = "hover:bg-zinc-400";
---

<nav class=`sticky top-0 w-full pt-5 ${colorTheme}`>
    <ul class=`flex flex-col`>
        {
            pages.map((page) => {
                {
                    if (page.routes) {
                        return (
                            <>
                                <li
                                    class:list={[
                                        `flex mt-1 rounded-t ${hover} ${colorTheme}
                                        ${
                                            page.name === pageTitle
                                                ? currentPageBgColor
                                                : "bg-zinc-300"
                                        }`,
                                    ]}>
                                    <a
                                        class="flex grow p-2 text-xl font-bold"
                                        href={page.path}>
                                        {page.name}
                                    </a>
                                </li>
                                <ul>
                                    {page.routes.map((route) => (
                                        <li
                                            class:list={[
                                                `flex pl-5 last-of-type:rounded-b ${colorTheme} ${hover} 
                                                ${
                                                    route.name === pageTitle
                                                        ? currentPageBgColor
                                                        : "bg-zinc-300"
                                                }`,
                                            ]}>
                                            <a
                                                class="flex grow p-2 text-l font-bold"
                                                href={page.path + route.path}>
                                                &bull; {route.name}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </>
                        );
                    } else {
                        return (
                            <li
                                class:list={[
                                    `flex mt-1 rounded ${hover} ${
                                        page.name === pageTitle
                                            ? currentPageBgColor
                                            : "bg-zinc-300"
                                    }`,
                                ]}>
                                <a
                                    class="flex grow p-2 text-xl font-bold"
                                    href={page.path}>
                                    {page.name}
                                </a>
                            </li>
                        );
                    }
                }
            })
        }
    </ul>
</nav>
